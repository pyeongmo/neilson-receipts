rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 관리자 여부 확인 함수
    function isAdmin() {
      return request.auth != null &&
             get(/databases/$(database)/documents/permissions/$(request.auth.token.email)).data.isAdmin == true;
    }

    // 'expenses' 컬렉션에 대한 규칙
    match /expenses/{expenseId} {
      allow read: if request.auth != null;

      // 본인이거나 관리자인 경우에만 쓰기 허용
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
    }

    // 'permissions' 컬렉션에 대한 규칙
    match /permissions/{email} {
      // 본인의 권한 정보만 읽기 허용
      allow read: if request.auth != null && request.auth.token.email == email;
      // 쓰기는 오직 파이어베이스 콘솔에서만 가능하도록 차단
      allow write: if false;
    }

    // 다른 컬렉션에 대한 기본 규칙
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
